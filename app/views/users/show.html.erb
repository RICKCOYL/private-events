<h3>Upcoming events <h3>


<% @user.attendances.each do |t| %>
   <% if Date.today < t.date %>
        <%= t.date %>
        <%= t.description %>
     <% end %>
<% end %>

<h3>Past events <h3>


<% @user.attended_events.each do |t| %>
   <% if Date.today > t.date %>
        <%= t.date %>
        <%= t.description %>
     <% end %>
<% end %>

